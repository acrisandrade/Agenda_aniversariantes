@model ViewPessoas
@{
    ViewData["Title"] = "Create";
}


<h1>Criar novo amigo</h1>
<form method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input asp-for="Nome" class="form-control">
        <span asp-validation-for="Nome" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="sobrenome">Sobrenome</label>
        <input asp-for="Sobrenome" class="form-control">
        <span asp-validation-for="Sobrenome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="aniversario">Data Aniversário</label>
        <input asp-for="Aniversario" type="date" class="form-control"/>
        <span asp-validation-for="Aniversario" class="text-danger"></span>
    </div>
    <button type="submit" value="Create" class="btn btn-primary btn-lg">butao</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}