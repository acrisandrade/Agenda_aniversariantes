@model ViewPessoas

@{
    ViewData["Title"] = "Edit";
}
<h1>Editar</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <input type="hidden" asp-for="id" />

        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control">
        <span asp-validation-for="Nome" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Sobrenome" class="control-label"></label>
        <input asp-for="Sobrenome"  class="form-control">
        <span asp-validation-for="Sobrenome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="aniversario">Data Aniversário</label>
        <input asp-for="Aniversario" type="date" class="form-control" />
        <span asp-validation-for="Aniversario" class="text-danger"></span>
    </div>
    <button type="submit" value="Create" class="btn btn-primary btn-lg">butao</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

